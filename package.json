  "description": "A social media platform through which coders can connect/communicate and share their careers, projects, etc. ",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon server",
    "start": "node server",
    "client": "npm start --prefix client",
